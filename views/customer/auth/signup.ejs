    <%- include ('../../base/includes/head.ejs', {pageTitle: "Signup"}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include ('../../base/includes/header.ejs') %>
    <main>
        <h1>Create New Account</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="post">
            <input type="hidden" name="CSRFToken" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-mail</label>
                <input type="email" name="email" value="<%= inputData.email %>" id="email" required>
            </p>
            <p>
                <label for="confirmEmail">Confirm Your Email</label>
                <input type="email" name="confirmEmail" value="<%= inputData.confirmEmail %>" id="confirmEmail" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="text" name="password" value="<%= inputData.password %>" id="password" minlength="6" required>
            </p>
            <hr>
            <p>
                <label for="fullName">Fullname</label>
                <input type="text" name="fullName" value="<%= inputData.fullName %>" id="fullName" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" value="<%= inputData.street %>" id="street" required>
            </p>
            <p>
                <label for="postalCode">Postal Code</label>
                <input 
                    type="text" 
                    name="postalCode" 
                    value="<%= inputData.postalCode %>" 
                    id="postalCode" 
                    minlength="5" 
                    maxlength="5" 
                    required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" value="<%= inputData.city %>" id="city" required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>    
    </main>
    <%- include ('../../base/includes/footer.ejs') %>
</body>
</html>