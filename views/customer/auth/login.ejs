<%- include ('../../base/includes/head.ejs', {pageTitle: "Login"}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
<script src="/scripts/show-hide-pwd.js" defer></script>
<!-- <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css"> -->
<!-- <script src="https://kit.fontawesome.com/2393ea5d38.js" crossorigin="anonymous"></script> -->

</head>
<body>
<%- include ('../../base/includes/header.ejs') %>
<main>
    <h1>Login</h1>
    <% if(inputData.errorMessage) { %>
        <section class="alert">
            <h2>Invalid Input</h2>
            <p><%= inputData.errorMessage %></p>
        </section>
    <% } %>
    <form action="/login" method="post">
        <input type="hidden" name="CSRFToken" value="<%= locals.csrfToken %>">
        <p>
            <label for="email">E-mail</label>
            <input type="email" name="email" value="<%= inputData.email %>" id="email" required>
        </p>
        <p>
            <label for="password">Password</label>
            <div id="pwd-line">
                <input type="password" name="password" value="<%= inputData.password %>" id="password" minlength="6" required>
                <input type="button" id="show-hide-pwd" value="&#128274;">
            </div>        
        </p>
        <button class="btn">Login</button>
        <p id="switch-form"><a href="/signup">Create a new user!</a></p>
    </form>    
</main>
<%- include ('../../base/includes/footer.ejs') %>
</body>
</html>