<form action="<%= submitPath %>?csrftoken=<%=locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <!-- per csrf si usa un query parameter sul path del form -->
    <!-- csrf token con input hidden non funziona con multipart/form-data -->
    <p>
        <label for="title">Title</label>
        <input type="text" id="title" value="<%= product.title %>" name="title" required>
    </p>
    <p>
        <div id="imgUploadControl">
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept=".jpg, .pdf, .png" <% if (imageRequired) { %> required <% } %>>
            </p>
            <img src="" alt="Selected image">
        </div>
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" value="<%= product.summary %>" name="summary" required maxlength="250">
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" value="<%= product.price %>" name="price" min="0.01" step="0.01" required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7"><%= product.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </p>
    
</form>